<div class="container">
  <div class="container-content">
  <div class="playlists-container-content">
  <div class="modale-quit-icon"><%= link_to image_tag("Quit icon.png"), :back %></div>
    <h1><%= @playlist.name %></h1>
    <h6 class="light-text small"><%= @playlist.description %></h6>
    <div class="playlist-container">
      <%# <div class="modale-save-icon"> link_to image_tag("Save icon.png"), movies_path </div> %>
      <div class="button-light"><span class="button-text">Ajouter un film</span></div>
    </div>
      <div class="scroll">
      <% @movies.each do |movie| %>
        <div class="movie-card">
          <div class="movie-card-save-icon"><%= link_to image_tag("Save icon.png"), movies_path %></div>
          <%= link_to(movie_path(movie), class: "text-decoration-none") do %>
            <div class="movie-card" style="background-image: url('<%= movie.vertical_image_url %>')">
              <div class="movie-card card-gradient">
                <div class="movie-card-text">
                  <h5 class="light-text"><%= movie.title %></h5>
                  <h6 class="light-text small"><%= movie.overview.first(50) %></h6>
                  <div class="movie-capsules-container">
                    <div class="movie-capsule"><%= movie.runtime %> min</div>
                    <div class="movie-capsule"><%= movie.release_year %></div>
                    <div class="movie-capsule"><%= movie.genres %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="playlist-container-content-bottom"> </div>
</div>
</div>
