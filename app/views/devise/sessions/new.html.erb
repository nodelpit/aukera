<div class="container">
  <div class="modale-container">
    <div class="regs-container">
      <div class="playlists-container-content">
        <h2 class="title signin-title">Connexion</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="signin-section">
            <h3 class="signin-section-title">Informations de connexion</h3>
            <div class="regs-container-p">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "Email",
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          label: "Mot de passe",
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me,
                          as: :boolean,
                          label: "Se souvenir de moi" if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: "form-submit-button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
