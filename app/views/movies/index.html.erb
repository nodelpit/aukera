<div class="container">
  <div class="container-content">
    <div class="button-light mx-auto"><%= link_to "Relancer", movies_path(params.permit(:duration, :services, :genres, search: :query)), class: "button-text" %></div>
    <div class="scroll">
      <% @movies.each do |movie| %>
        <div class="movie-card">
          <div class="movie-card-save-icon"><%= link_to image_tag("Save icon.png"), movies_path %></div>
          <%= link_to(movie_path(movie), class: "text-decoration-none", data: {turbo_frame: "movie-modal"}) do %>
            <div class="movie-card" style="background-image: url('<%= movie.vertical_image_url %>')">
              <div class="movie-card card-gradient">
                <div class="movie-card-text">
                  <h5 class="light-text"><%= movie.title %></h5>
                  <h6 class="light-text small"><%= movie.overview.first(50) %></h6>
                  <div class="movie-capsules-container">
                    <div class="movie-capsule"><%= movie.runtime %> min</div>
                    <div class="movie-capsule"><%= movie.release_year %></div>
                    <div class="movie-capsule"><%= movie.genres %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <h3><%= link_to "Mes playlists", playlists_path, class: "light-text text-decoration-none" %></h3>
    <div class="scroll">
      <div class="scroll-fade-right"></div>
      <div class="scroll-container">
        <% @playlists.each do |playlist| %>
          <div class="list-card" style="background-image: url('<%= image_path("Playlist test image.png") %>')">
            <%= link_to(playlist_path(playlist), class: "text-decoration-none") do %>
              <div class="list-card card-gradient">
                <h6 class="light-text small"><%= playlist.name %></h6>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="list-card" style="background: transparent; box-shadow: none">
          <%= link_to(playlists_path) do %>
            <h6 class="light-text small">Voir toutes mes playlists</h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
